# =====================================
# TRUCK BOOKING AGENT SYSTEM CONFIG
# =====================================

# ===================
# LLM Configuration
# ===================
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your_gemini_api_key_here

# Alternative LLM options (optional)
OPENAI_API_KEY=your_openai_api_key_here

# ===================
# Telegram Bot Setup
# ===================
# Get from @BotFather on Telegram: https://t.me/botfather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Authorized user IDs (comma-separated)
# Get your user ID by messaging @userinfobot
AUTHORIZED_USERS=123456789,987654321

# ===================
# Truck API Integration
# ===================
# Your truck search API endpoint (if you have one)
TRUCK_API_URL=https://your-truck-api.com/api/v1

# API authentication token
API_AUTHENTICATION_TOKEN=your_api_token_here

# ===================
# Database (Optional)
# ===================
DATABASE_URL=sqlite:///truck_booking.db

# ===================
# Security Settings
# ===================
SECRET_KEY=your-secret-key-for-sessions
AUDIT_LOG_FILE=logs/security_audit.log

# ===================
# Logging
# ===================
LOG_LEVEL=INFO
LOG_FILE=logs/truck_booking.log

# ===================
# Server Settings
# ===================
HOST=localhost
PORT=8000

# ===================
# Development Settings
# ===================
DEBUG=True
SIMULATION_MODE=True